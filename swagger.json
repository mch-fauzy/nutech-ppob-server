{
    "openapi": "3.0.3",
    "info": {
        "title": "Nutech PPOB Server",
        "description": "Backend server built with NodeJS and Postgresql for managing users, services, banners, and transactions",
        "version": "1.0.0"
    },
    "servers": [
        {
            "url": "https://nutech-ppob-server.vercel.app/"
        },
        {
            "url": "http://localhost:3000"
        }
    ],
    "tags": [
        {
            "name": "Module Membership"
        },
        {
            "name": "Module Information"
        },
        {
            "name": "Module Transaction"
        }
    ],
    "paths": {
        "/v1/register": {
            "post": {
                "tags": [
                    "Module Membership"
                ],
                "summary": "Register into server",
                "operationId": "register",
                "requestBody": {
                    "required": true,
                    "content": {
                        "application/json": {
                            "schema": {
                                "$ref": "#/components/schemas/register"
                            }
                        }
                    }
                },
                "responses": {
                    "200": {
                        "description": "Ok"
                    },
                    "400": {
                        "description": "Bad Request"
                    },
                    "409": {
                        "description": "Conflict"
                    },
                    "500": {
                        "description": "Internal Server Error"
                    }
                }
            }
        },
        "/v1/login": {
            "post": {
                "tags": [
                    "Module Membership"
                ],
                "summary": "Login into server",
                "operationId": "login",
                "requestBody": {
                    "required": true,
                    "content": {
                        "application/json": {
                            "schema": {
                                "$ref": "#/components/schemas/login"
                            }
                        }
                    }
                },
                "responses": {
                    "200": {
                        "description": "Ok"
                    },
                    "400": {
                        "description": "Bad Request"
                    },
                    "401": {
                        "description": "Unauthorized"
                    },
                    "500": {
                        "description": "Internal Server Error"
                    }
                }
            }
        },
        "/v1/profile": {
            "get": {
                "tags": [
                    "Module Membership"
                ],
                "summary": "Get profile for current user",
                "operationId": "getProfileForCurrentUser",
                "security": [
                    {
                        "bearerAuth": []
                    }
                ],
                "responses": {
                    "200": {
                        "description": "Ok"
                    },
                    "400": {
                        "description": "Bad Request"
                    },
                    "401": {
                        "description": "Unauthorized"
                    },
                    "500": {
                        "description": "Internal Server Error"
                    }
                }
            }
        },
        "/v1/profile/update": {
            "put": {
                "tags": [
                    "Module Membership"
                ],
                "summary": "Update profile for current user",
                "operationId": "updateProfileForCurrentUser",
                "requestBody": {
                    "required": true,
                    "content": {
                        "application/json": {
                            "schema": {
                                "$ref": "#/components/schemas/userUpdate"
                            }
                        }
                    }
                },
                "security": [
                    {
                        "bearerAuth": []
                    }
                ],
                "responses": {
                    "200": {
                        "description": "Ok"
                    },
                    "400": {
                        "description": "Bad Request"
                    },
                    "401": {
                        "description": "Unauthorized"
                    },
                    "404": {
                        "description": "Not Found"
                    },
                    "500": {
                        "description": "Internal Server Error"
                    }
                }
            }
        },
        "/v1/profile/image": {
            "put": {
                "tags": [
                    "Module Membership"
                ],
                "summary": "Update profile image for current user",
                "operationId": "asdasd",
                "requestBody": {
                    "required": true,
                    "content": {
                        "multipart/form-data": {
                            "schema": {
                                "$ref": "#/components/schemas/userUpdateProfileImage"
                            }
                        }
                    }
                },
                "security": [
                    {
                        "bearerAuth": []
                    }
                ],
                "responses": {
                    "200": {
                        "description": "Ok"
                    },
                    "400": {
                        "description": "Bad Request"
                    },
                    "401": {
                        "description": "Unauthorized"
                    },
                    "404": {
                        "description": "Not Found"
                    },
                    "500": {
                        "description": "Internal Server Error"
                    }
                }
            }
        },
        "/v1/banner": {
            "get": {
                "tags": [
                    "Module Information"
                ],
                "summary": "Get banner list",
                "operationId": "getBannerList",
                "responses": {
                    "200": {
                        "description": "Ok"
                    },
                    "401": {
                        "description": "Unauthorized"
                    },
                    "500": {
                        "description": "Internal Server Error"
                    }
                }
            }
        },
        "/v1/services": {
            "get": {
                "tags": [
                    "Module Information"
                ],
                "summary": "Get service list",
                "operationId": "getServiceList",
                "security": [
                    {
                        "bearerAuth": []
                    }
                ],
                "responses": {
                    "200": {
                        "description": "Ok"
                    },
                    "401": {
                        "description": "Unauthorized"
                    },
                    "500": {
                        "description": "Internal Server Error"
                    }
                }
            }
        },
        "/v1/balance": {
            "get": {
                "tags": [
                    "Module Transaction"
                ],
                "summary": "Get balance for current user",
                "operationId": "getBalanceForCurrentUser",
                "security": [
                    {
                        "bearerAuth": []
                    }
                ],
                "responses": {
                    "200": {
                        "description": "Ok"
                    },
                    "401": {
                        "description": "Unauthorized"
                    },
                    "500": {
                        "description": "Internal Server Error"
                    }
                }
            }
        },
        "/v1/topup": {
            "post": {
                "tags": [
                    "Module Transaction"
                ],
                "summary": "Top-up balance for current user",
                "operationId": "topUpBalanceForCurrentUser",
                "security": [
                    {
                        "bearerAuth": []
                    }
                ],
                "requestBody": {
                    "required": true,
                    "content": {
                        "application/json": {
                            "schema": {
                                "$ref": "#/components/schemas/transactionTopUpBalance"
                            }
                        }
                    }
                },
                "responses": {
                    "200": {
                        "description": "Ok"
                    },
                    "400": {
                        "description": "Bad Request"
                    },
                    "401": {
                        "description": "Unauthorized"
                    },
                    "500": {
                        "description": "Internal Server Error"
                    }
                }
            }
        },
        "/v1/transaction": {
            "post": {
                "tags": [
                    "Module Transaction"
                ],
                "summary": "Payment transaction for current user",
                "operationId": "paymentForCurrentUser",
                "security": [
                    {
                        "bearerAuth": []
                    }
                ],
                "requestBody": {
                    "required": true,
                    "content": {
                        "application/json": {
                            "schema": {
                                "$ref": "#/components/schemas/transactionPayment"
                            }
                        }
                    }
                },
                "responses": {
                    "200": {
                        "description": "Ok"
                    },
                    "400": {
                        "description": "Bad Request"
                    },
                    "401": {
                        "description": "Unauthorized"
                    },
                    "500": {
                        "description": "Internal Server Error"
                    }
                }
            }
        },
        "/v1/transaction/history": {
            "get": {
                "tags": [
                    "Module Transaction"
                ],
                "summary": "Get transaction list for current user",
                "operationId": "getListForCurrentUser",
                "parameters": [
                    {
                        "name": "page",
                        "in": "query",
                        "description": "Page number for pagination (offset + 1)",
                        "schema": {
                            "type": "integer",
                            "default": 1
                        }
                    },
                    {
                        "name": "page_size",
                        "in": "query",
                        "description": "Number of items per page (limit)",
                        "schema": {
                            "type": "integer",
                            "default": 10
                        }
                    }
                ],
                "security": [
                    {
                        "bearerAuth": []
                    }
                ],
                "responses": {
                    "200": {
                        "description": "Ok"
                    },
                    "400": {
                        "description": "Bad Request"
                    },
                    "401": {
                        "description": "Unauthorized"
                    },
                    "500": {
                        "description": "Internal Server Error"
                    }
                }
            }
        }
    },
    "components": {
        "schemas": {
            "register": {
                "type": "object",
                "properties": {
                    "email": {
                        "type": "string",
                        "example": "john.doe@example.com"
                    },
                    "firstName": {
                        "type": "string",
                        "example": "John"
                    },
                    "lastName": {
                        "type": "string",
                        "example": "Doe"
                    },
                    "password": {
                        "type": "string",
                        "example": "securepassword"
                    }
                }
            },
            "login": {
                "type": "object",
                "properties": {
                    "email": {
                        "type": "string",
                        "example": "john.doe@example.com"
                    },
                    "password": {
                        "type": "string",
                        "example": "securepassword"
                    }
                }
            },
            "userUpdate": {
                "type": "object",
                "properties": {
                    "firstName": {
                        "type": "string",
                        "example": "John Edited"
                    },
                    "lastName": {
                        "type": "string",
                        "example": "Doe Edited"
                    }
                }
            },
            "userUpdateProfileImage": {
                "type": "object",
                "properties": {
                    "image": {
                        "type": "string",
                        "format": "binary"
                    }
                }
            },
            "transactionTopUpBalance": {
                "type": "object",
                "properties": {
                    "topUpAmount": {
                        "type": "number",
                        "example": 100000
                    }
                }
            },
            "transactionPayment": {
                "type": "object",
                "properties": {
                    "serviceCode": {
                        "type": "string",
                        "example": "PULSA"
                    }
                }
            }
        },
        "securitySchemes": {
            "bearerAuth": {
                "type": "http",
                "scheme": "bearer",
                "bearerFormat": "JWT"
            }
        }
    }
}