{
    "openapi": "3.0.3",
    "info": {
        "title": "Nutech PPOB Server",
        "description": "REST API server that handles users, transactions, and information related feature",
        "version": "1.0.0"
    },
    "servers": [
        {
            "url": "https://nutech-ppob-server.vercel.app/"
        },
        {
            "url": "http://localhost:3000"
        }
    ],
    "tags": [
        {
            "name": "Module Membership"
        }
    ],
    "paths": {
        "/v1/register": {
            "post": {
                "tags": [
                    "Module Membership"
                ],
                "summary": "Register into server",
                "operationId": "register",
                "requestBody": {
                    "required": true,
                    "content": {
                        "application/json": {
                            "schema": {
                                "$ref": "#/components/schemas/register"
                            }
                        }
                    }
                },
                "responses": {
                    "200": {
                        "description": "Ok"
                    },
                    "400": {
                        "description": "Bad Request"
                    },
                    "409": {
                        "description": "Conflict"
                    },
                    "500": {
                        "description": "Internal Server Error"
                    }
                }
            }
        },
        "/v1/login": {
            "post": {
                "tags": [
                    "Module Membership"
                ],
                "summary": "Login into server",
                "operationId": "login",
                "requestBody": {
                    "required": true,
                    "content": {
                        "application/json": {
                            "schema": {
                                "$ref": "#/components/schemas/login"
                            }
                        }
                    }
                },
                "responses": {
                    "200": {
                        "description": "Ok"
                    },
                    "400": {
                        "description": "Bad Request"
                    },
                    "401": {
                        "description": "Unauthorized"
                    },
                    "500": {
                        "description": "Internal Server Error"
                    }
                }
            }
        },
        "/v1/profile": {
            "get": {
                "tags": [
                    "Module Membership"
                ],
                "summary": "Get profile for current user",
                "operationId": "getProfileForCurrentUser",
                "security": [
                    {
                        "bearerAuth": []
                    }
                ],
                "responses": {
                    "200": {
                        "description": "Ok"
                    },
                    "400": {
                        "description": "Bad Request"
                    },
                    "401": {
                        "description": "Unauthorized"
                    },
                    "500": {
                        "description": "Internal Server Error"
                    }
                }
            }
        },
        "/v1/profile/update": {
            "put": {
                "tags": [
                    "Module Membership"
                ],
                "summary": "Update profile for current user",
                "operationId": "updateProfileForCurrentUser",
                "requestBody": {
                    "required": true,
                    "content": {
                        "application/json": {
                            "schema": {
                                "$ref": "#/components/schemas/userUpdate"
                            }
                        }
                    }
                },
                "security": [
                    {
                        "bearerAuth": []
                    }
                ],
                "responses": {
                    "200": {
                        "description": "Ok"
                    },
                    "400": {
                        "description": "Bad Request"
                    },
                    "401": {
                        "description": "Unauthorized"
                    },
                    "404": {
                        "description": "Not Found"
                    },
                    "500": {
                        "description": "Internal Server Error"
                    }
                }
            }
        },
        "/v1/profile/image": {
            "put": {
                "tags": [
                    "Module Membership"
                ],
                "summary": "Update profile image for current user",
                "operationId": "asdasd",
                "requestBody": {
                    "required": true,
                    "content": {
                        "multipart/form-data": {
                            "schema": {
                                "$ref": "#/components/schemas/userProfileImageUpdate"
                            }
                        }
                    }
                },
                "security": [
                    {
                        "bearerAuth": []
                    }
                ],
                "responses": {
                    "200": {
                        "description": "Ok"
                    },
                    "400": {
                        "description": "Bad Request"
                    },
                    "401": {
                        "description": "Unauthorized"
                    },
                    "404": {
                        "description": "Not Found"
                    },
                    "500": {
                        "description": "Internal Server Error"
                    }
                }
            }
        }
    },
    "components": {
        "schemas": {
            "register": {
                "type": "object",
                "properties": {
                    "email": {
                        "type": "string",
                        "example": "john.doe@example.com"
                    },
                    "firstName": {
                        "type": "string",
                        "example": "John"
                    },
                    "lastName": {
                        "type": "string",
                        "example": "Doe"
                    },
                    "password": {
                        "type": "string",
                        "example": "securepassword"
                    }
                }
            },
            "login": {
                "type": "object",
                "properties": {
                    "email": {
                        "type": "string",
                        "example": "john.doe@example.com"
                    },
                    "password": {
                        "type": "string",
                        "example": "securepassword"
                    }
                }
            },
            "userUpdate": {
                "type": "object",
                "properties": {
                    "firstName": {
                        "type": "string",
                        "example": "John Edited"
                    },
                    "lastName": {
                        "type": "string",
                        "example": "Doe Edited"
                    }
                }
            },
            "userProfileImageUpdate": {
                "type": "object",
                "properties": {
                    "image": {
                        "type": "string",
                        "format": "binary"
                    }
                }
            },
            "createProduct": {
                "type": "object",
                "properties": {
                    "name": {
                        "type": "string",
                        "example": "My New Product"
                    },
                    "description": {
                        "type": "string",
                        "example": "State of the art product with affordable price"
                    },
                    "price": {
                        "type": "number",
                        "example": 123987
                    },
                    "available": {
                        "type": "boolean",
                        "example": true
                    }
                }
            }
        },
        "securitySchemes": {
            "bearerAuth": {
                "type": "http",
                "scheme": "bearer",
                "bearerFormat": "JWT"
            }
        }
    }
}
